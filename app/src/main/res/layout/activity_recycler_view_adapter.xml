<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerViewAdapter">


  <TextView
      android:id="@+id/nombre_empresa"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <TextView
      android:id="@+id/numero_palets"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_constraintTop_toTopOf="@id/nombre_empresa"
      android:layout_constraintBottom_toBottomOf="@id/nombre_empresa"
      android:layout_constraintStart_toEndOf="@id/nombre_empresa"
      android:layout_constrintEnd_toEndOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>